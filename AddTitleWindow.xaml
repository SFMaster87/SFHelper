<Window x:Class="SFHelper.AddTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFHelper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Введите название темы:" Height="71" Width="391" Activated="Window_Activated">
    <Grid>
        <StackPanel Height="40" VerticalAlignment="Top">
            <TextBox x:Name="textBox" Height="40" TextWrapping="Wrap" FontSize="24" KeyDown="textBox_KeyDown"/>
        </StackPanel>
    </Grid>
</Window>
